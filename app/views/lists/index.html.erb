<h1>All Lists</h1>
<ul class="d-flex gap-2 justify-content-between ps-0">
  <% @lists.each do |list| %>
    <div class="card text-center d-flex align-items-center justify-content-center overlay" style="min-height: 200px; width: 250px; background-image: url(<%= list.movies.first.poster_url %>); background-position: center; background-size: cover">
      <li>
        <%= link_to list.name, list_path(list), class: "h2 text-light text-decoration-none position-relative z-index-n1" %>
      </li>
    </div>
  <% end %>
</ul>
<%= link_to "Add list", new_list_path, class: "btn btn-primary" %>
