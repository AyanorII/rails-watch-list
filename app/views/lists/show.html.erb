<h1><%= @list.name %></h1>

<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<ul class="mt-5 ps-0">
  <div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <div class="card d-flex flex-column align-items-start justify-content-between text-light bg-dark gap-2">
        <img src=<%= bookmark.movie.poster_url %> alt="" width="100%" class="mb-3 align-self-center">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <span>Rating: <%= bookmark.movie.rating %>/10</span>
        <%= link_to "Delete", bookmark_path(bookmark), method: "delete", class: "btn btn-danger text-light my-2" %>
        <q><%= bookmark.comment %></q>
      </div>
    </li>
  <% end %>
  </div>
</ul>
